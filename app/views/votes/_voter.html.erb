 <% if policy(Vote.new).create? %>
   <div class="pull-left" id="vote-arrows">
     <div><%= link_to "Up Vote ", post_up_vote_path(post), class: 'glyphicon glyphicon-chevron-up', method: :post %></div>
     <div><strong><%= post.points %></strong></div>
     <div><%= link_to "Down Vote", post_down_vote_path(post), class: 'glyphicon glyphicon-chevron-down', method: :post %></div>
   </div>
<% end %>