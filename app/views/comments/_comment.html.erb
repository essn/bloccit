<% @comments.each do |comment| %>
  <div class="media">
    <div class="media-body">
        <%= comment.body %>

    </br>

    <small>
      submitted <%= time_ago_in_words(comment.created_at) %> time ago by 
      <%= comment.user.name || comment.user.email %>
    </small>

    </div>
  </div>
<% end %>