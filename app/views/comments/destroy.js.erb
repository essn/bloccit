<% if @comment.destroyed? %>
  $('#comment-' +<%= @comment.id %>).fadeOut();
  $('.js-comments-count').html("<%= @comment.user.comments.count %> comments");
<% else %>
  $('#comment-' +<%= @comment.id %>).prepend("<div class='alert alert-danger'><%= flash[:error] = 'Error deleting comment, please try again.' %></div>");   
<% end %>
