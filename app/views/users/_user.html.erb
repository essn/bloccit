<div class="media">
  <%= link_to user, class: 'pull-left' do %>
    <%= image_tag(user.avatar.profile.url) if user.avatar? %>
  <% end %>

  <div class="media-body">
    <h4 class="media-heading">
      <% if user.name %>
        <%= link_to user.name, user %>
      <% else %>
        <%= link_to user.email, user %>
      <% end %>
    </h4>

    <small>
      <%= pluralize(user.posts_count, 'post') %>
      <%= pluralize(user.comments_count, 'comment') %>
    </small>
  </div>
</div>